<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailForm"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/logo"
        android:text="Blood Bank"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <TextView
        android:id="@+id/title"
        android:layout_below="@id/logo"
        android:text="User Information"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideOverlay"
        android:layout_margin="20dp"
        android:layout_below="@id/title"
        android:background="@drawable/round_white_no_border_20r"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:drawableStart="@drawable/profile_icon"
                android:drawablePadding="10dp"
                android:paddingStart="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/nameEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:layout_below="@+id/name"/>

            <TextView
                android:id="@+id/phoneNo"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="10dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_below="@+id/nameEdit"/>

            <EditText
                android:id="@+id/phoneNoEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:layout_below="@+id/phoneNo"/>

            <TextView
                android:id="@+id/bloodGrp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group Type"
                android:drawablePadding="10dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_below="@+id/phoneNoEdit"/>

            <EditText
                android:id="@+id/bloodGrpEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:layout_below="@id/bloodGrp"
                />



            <TextView
                android:id="@+id/city"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_below="@id/bloodGrpEdit"/>

            <EditText
                android:id="@+id/cityEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:layout_below="@+id/city"/>

            <TextView
                android:id="@+id/age"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_below="@+id/cityEdit"/>

            <EditText
                android:id="@+id/ageEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:inputType="number"
                android:layout_below="@+id/age"/>

            <TextView
                android:id="@+id/gender"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_below="@+id/ageEdit"/>

            <EditText
                android:id="@+id/genderEdit"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:layout_below="@+id/gender"/>

            <Button
                android:text="Submit User Information"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:id="@+id/SubmitUserDetails"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/genderEdit"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/SubmitUserDetails"
                android:id="@+id/signUpToIn"
                android:text="User already exists"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/progBar"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>