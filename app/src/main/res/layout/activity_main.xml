<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:background="@android:color/holo_blue_dark"
        app:title="@string/app_name"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/blood_donor_card"
                android:elevation="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:background="@android:color/holo_green_dark"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="0dp"
                    android:id="@+id/webIconImg"
                    android:src="@drawable/blood_donor_img"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="150dp" />

                <TextView
                    android:layout_below="@+id/webIconImg"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/webName"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:text="Donate Blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                    android:text=""
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/webIconImg"
                    android:id="@+id/webUrl"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/blood_reciepient_card"
                android:elevation="16dp"
                android:layout_below="@id/blood_donor_card"
                android:layout_marginTop="4dp"
                android:background="@color/purple_200"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="0dp"
                    android:id="@+id/webIconImgReciepient"
                    android:src="@drawable/blood_reciepient_img"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="150dp" />

                <TextView
                    android:layout_below="@+id/webIconImgReciepient"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/r_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:text="Need Blood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                    android:text=""
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/webIconImgReciepient"
                    android:id="@+id/webUrlR"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hospital_card"
                android:elevation="16dp"
                android:layout_below="@id/blood_reciepient_card"
                android:layout_marginTop="4dp"
                android:background="#03A9F4"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="0dp"
                    android:id="@+id/webIconImgHospital"
                    android:src="@drawable/hospital_img"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="150dp" />

                <TextView
                    android:layout_below="@+id/webIconImgHospital"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/h_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:text="Hospitals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                    android:text=""
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/webIconImgHospital"
                    android:id="@+id/webUrlH"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Blood_Bank_card"
                android:elevation="16dp"
                android:layout_below="@id/hospital_card"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="0dp"
                    android:id="@+id/webIconImgBlood_Bank"
                    android:src="@drawable/blood_bank_img"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="150dp" />

                <TextView
                    android:layout_below="@+id/webIconImgBlood_Bank"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/b_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:text="Blood Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingStart="15dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                    android:text=""
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/webIconImgBlood_Bank"
                    android:id="@+id/webUrlB"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>